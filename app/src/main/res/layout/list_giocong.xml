<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginLeft="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#000000"
            android:textSize="18sp"
            android:text="Ngày :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txtNgayTheoDoiCong"
            android:textColor="#e40404"
            android:layout_marginLeft="5dp"
            android:textSize="18sp"
            android:text="21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout

        android:layout_marginLeft="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <TextView
                android:gravity="right"
                android:textColor="#000000"
                android:textSize="18sp"
                android:text="Giờ vào :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txtGioVaoTheoDoiCong"
            android:textColor="#e40404"
            android:layout_marginLeft="5dp"
            android:textSize="18sp"
            android:text="15:00:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:gravity="right"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="right"
                android:textColor="#000000"
                android:textSize="18sp"
                android:text="Giờ ra :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txtGioRaTheDoiCong"
                android:textColor="#e40404"
                android:layout_marginLeft="5dp"
                android:textSize="18sp"
                android:text="23:00:00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#000000"
            android:textSize="18sp"
            android:text="Số giờ công :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txtSoGioCongTheoDoi1Ngay"
            android:textColor="#e40404"
            android:layout_marginLeft="5dp"
            android:textSize="18sp"
            android:text="8 "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <View
        android:layout_marginTop="17dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#c28e79"/>



</LinearLayout>